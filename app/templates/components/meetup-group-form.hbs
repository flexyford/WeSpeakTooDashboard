{{#x-form
   class="meetup-find-form"
   data=defaults
   onSubmit=(action "submit")
   as |form|
}}
  {{#form.field property="zip" class="form-row" as |field|}}

    <h4>Begin</h4>
    <p>Begin creating a meetup dataset for your city by searching for groups nerby.</p>
    <div class="form-row">
      <button
          class={{concat "btn btn-primary" (unless currentLocation " disabled")}}
          disabled={{unless currentLocation " disabled"}}
          {{action "setCurrentLocation"}}>
        Use Current Location
      </button>
    </div>

    <span>or</span>

    <div class = "zipcode">
    Enter Zip Code:<br>
    {{one-way-input
      value=field.value
      update=(action field.actions.onChange)
      name="zipcode"
    }}
    <br>
    <button
        class={{concat "btn btn-primary" (if waitingForLocation " disabled")}}
        disabled={{waitingForLocation}}
        {{action form.actions.submit}}>
      Find Groups
    </button>
  </div>

  {{/form.field}}
{{/x-form}}
