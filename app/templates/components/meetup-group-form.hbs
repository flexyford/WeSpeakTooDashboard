{{#x-form
   class="test-meetup-request-form"
   data=defaults
   onSubmit=(action "submit")
   as |form|
}}
  {{#form.field property="category" as |field|}}
    {{#x-select
       value=field.value
       action=(action field.actions.onChange)
       as |xs|}}
      {{#each categories as |category|}}
        {{#xs.option value=category.value}}{{category.name}}{{/xs.option}}
      {{/each}}
    {{/x-select}}
  {{/form.field}}

  <div class="flexrow">

    {{#if useCurrentLocation}}
      ZipCode: Current Location
    {{else}}
      {{#form.field property="zip" as |field|}}
        ZipCode: {{one-way-input
          value=field.value
          update=(action field.actions.onChange)
          name="zipcode"
        }}
      {{/form.field}}

      <button class="btn btn-link" {{action "setCurrentLocation"}}>
        Use Current Location
      </button>
    {{/if}}

  </div>

  <div>
    <div class="col-xs-4 end-xs">
      <button
          class={{concat "btn btn-default" (if waitingForLocation " disabled")}}
          {{action form.actions.submit}}>
        Find Groups
      </button>
    </div>
  </div>
{{/x-form}}
